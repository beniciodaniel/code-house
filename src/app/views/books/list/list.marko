<html>
  <head>
      <meta charset="utf-8">
  </head>
  <body>
      <h1> Books List </h1>
      <table id="books">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Remove</th>
          </tr>
      </thead>
      <tbody>
        <tr id="book_${book.id}" for(book in data.books)>
          <td>${book.id}</td>
          <td>${book.title}</td>
          <td>${book.price}</td>
          <td><a href="#">Edit</a></td>
          <td><a href="#" data-ref="${book.id}" data-type="remove">Remove</a></td>
        </tr>
      </tbody>
      </table>

  <script src="/static/js/remove-book.js"></script>
  </body> 
</html>